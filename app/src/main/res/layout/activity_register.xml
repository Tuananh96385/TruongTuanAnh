<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/bg_login"
        android:layout_width="390dp"
        android:layout_height="150dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/logo_register">
    </ImageView>

    <EditText
        android:id="@+id/edittext_username"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:drawableLeft="@drawable/ic_action_password"
        android:background="#ffffff"
        android:layout_marginTop="160dp"
        android:hint="Username"></EditText>

    <EditText
        android:id="@+id/edittext_password"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:drawableLeft="@drawable/ic_action_password1"
        android:background="#ffffff"
        android:layout_marginTop="30dp"
        android:inputType="textPassword"
        android:hint="Password"></EditText>

    <EditText
        android:id="@+id/edittext_cnf_password"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:drawableLeft="@drawable/ic_action_password1"
        android:background="#ffffff"
        android:inputType="textPassword"
        android:layout_marginTop="30dp"
        android:hint="Confirm_Password"></EditText>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:text="@string/register"
        android:textColor="#FF4500"></Button>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:text="Login"
        android:textColor="#FF4500"></Button>


</LinearLayout>